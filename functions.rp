fn max(i64 a, i64 b): i64 {
  if (a > b) {
    return a;
  }
  return b;
}

fn sum(i64 x): i64 {
  if (x == 1) {
    return 1;
  }

  return x + sum(x - 1);
}

i64 x = max(3, 6);
print("The sum of " + x as str + " first integers is " + sum(x) as str + ".");
